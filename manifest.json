{
  "manifest_version": 3,
  "name": "1a.lv tracker",
  "version": "1.0",
  "description": "1a.lv product price history tracker",
  "icons": {
      "32": "./assets/logo.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://www.1a.lv/p/*/*",
        "https://www.1a.lv/ru/p/*/*"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "./assets/logo.png"
  },
  "permissions": ["tabs"] 
}